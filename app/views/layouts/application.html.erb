<!DOCTYPE html>
<html>
<head>
  <title>Treebook</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="navbar navbar-default">
		<div clas="navbar-inner">
			<div class="container">
				<a href="#" class="navbar-brand">Treebook</a>
			</div>
				<ul class="nav">
					<li><%= link_to "All Statuses", statuses_path %></li>
				</ul>
				<ul class="nav pull-right">
					<% if user_signed_in? %>
					<li><%= link_to 'Hi '+current_user.first_name, edit_user_registration_path %></li>
					<li><%= link_to 'Log Out', destroy_user_session_path,method: :delete %></li>
					<% else %>
					<li><%= link_to 'Register', new_user_session_path %></li>		
					<% end %>

				</ul>
		</div>
	</div>	
<div class="container">

	<% flash.each do |type, message| %>
		<div class="alert <%= flash_class(type.to_s) %>">
			<button class="close" data-dismiss="alert">x</button>
			<%= message %>
		</div>			
	<% end %>

		<%= yield %>
	</div> 
</body>
</html>